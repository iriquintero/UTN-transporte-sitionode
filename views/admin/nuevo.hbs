<div class="container" style="margin-top:100px">
    <div class="row">
        <div class="col-6 offset-3">
            <h4>Agregar Nueva Novedad</h4>
            <form action="/admin/novedades/nuevo" method="post">
                <div class="form-group">
                    <label for="exampleFormControlInput1">Título</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="agregar título" name="titulo">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlInput1">Subtítulo</label>
                    <input type="text" class="form-control" id="exampleFormControlInput1" placeholder="agregar subtítulo" name="subtitulo">
                </div>
                <div class="form-group">
                    <label for="exampleFormControlTextarea1">Cuerpo</label>
                    <textarea type="text" class="form-control" id="exampleFormControlTextarea1" rows="3" placeholder="agregar cuerpo" name="cuerpo"></textarea>
                </div>
                <button type="submit" class="btn btn-primary">Guardar</button>
            </form>
            {{#if error}}
            <p>{{mensaje}}</p>
            {{/if}}
        </div>
    </div>
</div>